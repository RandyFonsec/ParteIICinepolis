<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Login</title>
</head>

<body>
    <%-include('partials/_alertas')%>
        <div class="container d-flex justify-content-center mt-5">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-4 mt-5">
                        <img src="logoCinepolis.png" class="img-fluid rounded-start" alt="...">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">Inicio de sesión</h5>
                            <form action="/" method="post">
                                <div class="mb-1">
                                    <label for="exampleInputEmail1" class="form-label">Correo</label>
                                    <input type="text" name="correo" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                                </div>
                                <div class="mb-1">
                                    <label for="exampleInputPassword1" class="form-label">Contraseña</label>
                                    <input type="password" name="contrasenna" class="form-control" id="exampleInputPassword1">
                                </div>
                                <a href="#" data-bs-toggle="modal" data-bs-target="#exampleModal">Crear cuenta</a> <br>
                                <button type="submit" class="btn btn-primary mt-2">Ingresar</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Registro</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form>
                                <div class="mb-3">
                                    <label for="idName" class="form-label">Nombre</label>
                                    <input type="text" name="nombre" class="form-control" id="idName">
                                </div>
                                <div class="mb-3">
                                    <label for="idApe1" class="form-label">Primer apellido</label>
                                    <input type="text" name="apellido1" class="form-control" id="idApe1">
                                </div>
                                <div class="mb-3">
                                    <label for="idApe2" class="form-label">Segundo apellido</label>
                                    <input type="text" name="apellido2" class="form-control" id="idApe2">
                                </div>
                                <div class="mb-3">
                                    <label for="idCorreo" class="form-label">Correo</label>
                                    <input type="email" name="correo" class="form-control" id="idCorreo">
                                </div>
                                <div class="mb-3">
                                    <label for="idEdad" class="form-label">Edad</label>
                                    <input type="number" name="edad" class="form-control" id="idEdad">
                                </div>
                                <div class="mb-3">
                                    <label for="" class="form-label">Fecha de nacimiento</label>
                                    <input type="date" name="" class="form-control" id="">
                                </div>
                                <div class="mb-3">
                                    <label for="idVacunas" class="form-label">Vacunas</label>
                                    <input type="number" name="vacunas" class="form-control" id="idVacunas">
                                </div>
                                <button type="submit" class="btn btn-primary">Crear cuenta</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>




        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>

</body>

</html>
<%- include('partials/_headerCliente')%>

    <div class="container my-4 d-flex justify-content-center">
        <%if(typeof pelicula != 'undefined'){%>
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
            <!-- Modal -->
            <div class="modal" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-body">
                            <div class="container dflex align-items-center m-t5">
                                <p class="fs-1">
                                    <%=pelicula.titulo%>
                                </p>
                                <p class="fs-3">Año de publicación:
                                    <%=pelicula.annoPublicacion%>
                                </p>
                                <p class="fs-3">Duración:
                                    <%=pelicula.duracion%>
                                </p>
                                <p class="fs-3">Edad requerida:
                                    <%=pelicula.edadRequerida%>
                                </p>
                                <p class="fs-3">Precio:
                                    <%=pelicula.precioEntrada%>
                                </p>



                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <script>
                $(document).ready(function() {
                    $("#exampleModal").modal('show');
                });
            </script>
            <%}%>
                <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-indicators">
                        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true"></button>
                        <%for (var i = 1; i < peliculas.length ; i++){%>

                            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="<%=i%>" aria-label="Slide 2"></button>
                            <%}%>
                    </div>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="/pelicula.jpg" class="d-block w-100" alt="...">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>
                                    <%=peliculas[0].titulo%>
                                </h5>
                                <p>Precio base:
                                    <%=peliculas[0].precioEntrada%> <br> Edad Requerida:
                                        <%=peliculas[0].edadRequerida%>
                                </p>
                                <a href="/cliente/cartelera/<%=peliculas[0].idPelicula%>" class="btn btn-secondary " role="button">Ver info</a>
                            </div>
                        </div>
                        <%for (var i = 1; i < peliculas.length ; i++){%>
                            <!--<div class="carousel-item">
                        <img src="..." class="d-block w-100" alt="...">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>
                                <%=peliculas[i].titulo%>
                            </h5>
                            <p>Precio base:
                                <%=peliculas[i].precioEntrada%> Edad Requerida:
                                    <%=peliculas[i].edadRequerida%>
                            </p>
                        </div>
                    </div>-->
                            <div class="carousel-item">
                                <img src="/pelicula.jpg" class="d-block w-100" alt="...">
                                <div class="carousel-caption d-none d-md-block">
                                    <h5>
                                        <%=peliculas[i].titulo%>
                                    </h5>
                                    <p>Precio base:
                                        <%=peliculas[i].precioEntrada%> Edad Requerida:
                                            <%=peliculas[i].edadRequerida%>
                                    </p>
                                    <a href="/cliente/cartelera/<%=peliculas[i].idPelicula%>" class="btn btn-secondary " role="button">Ver info</a>
                                </div>
                            </div>
                            <%}%>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
                </div>


    </div>


    <%- include('partials/_footerCliente')%>